<h1>Log in</h1>

<div class='row'>
	<%= form_tag sessions_path do %>
		<div class='large-4'>
			<%= label_tag :username %>
			<%= text_field_tag :username, params[:username] %>
		</div>
		<div class='large-4'>
			<%= label_tag :password %>
			<%= password_field_tag :password  %>
		</div>	
		<%= submit_tag "Log in", class: "button radius" %>
	<% end  %>
</div>
